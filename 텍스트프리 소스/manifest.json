{ 
    "manifest_version":2,
    "name": "__MSG_appName__",
    "short_name": "Text-Free",
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "version": "1.4",
    "browser_action": {
      "default_icon": "./images/icon.png",
      "default_popup": "main.html",
      "default_title": "Text Free"
    },
    "content_scripts": [{
	"matches":	["*://*/*"],
	"js":		["inject.js"],
	"all_frames": true,
	"run_at" : "document_end" 
    }],
    "permissions": [
      "activeTab", 
      "storage"
    ]
}